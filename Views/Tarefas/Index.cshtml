@model IEnumerable<EstudosApiFront.Models.TarefaViewModel>
@{
    ViewBag.Title = "Tarefas";
}
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<h2>Lista de Tarefas</h2>
<p> <!--Links apontando para views na mesma pasta-->
    @Html.ActionLink("Criar Nova Tarefa", "Create")
</p>
<table class="table">
    <tr><!--Títulos das colunas da tabela-->
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.DataTermino)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Prioridade)</th>
        <th>@Html.DisplayNameFor(model => model.Completo)</th>
        <th>@Html.DisplayNameFor(model => model.CategoriaId)</th>
        <th></th>
    </tr>
    <!--Looping para escrever os dados na tabela-->
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.DataTermino)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Prioridade)</td>
            <td>@Html.DisplayFor(modelItem => item.Completo)</td>
            <td>@Html.DisplayFor(modelItem => item.CategoriaId)</td>
            <td><!--Coluna para Links/botões-->
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }
                , new { onclick = "return confirm('Deseja realmente deletar esta Tarefa?');"})
            </td>
        </tr>
    }
</table>